@model List<Product>
@{

}
<h2 class="text-center mb-5 fst-italic">List Of Products</h2>

<div class=" row mb-5">
    <div class="col">
        <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Create">New Product</a>
    </div>
    <div class="col">

    </div>
</div>



<table class="table shadow rounded">
    <thead>
        <tr class="fst-italic fw-bolder">
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr class="fst-italic">
                <td>
                    @product.Id
                </td>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.Brand
                </td>
                <td>
                    @product.Category
                </td>
                <td>
                    @(product.Price)$
                </td>
                <td>
                    <img src="/Images/@product.ImageFileName" width="100" />
                </td>
                <td>
                    @product.CreatedAt.ToString("MM/dd/yyyy")
                </td>
                <td style="white-space:nowrap">
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Products" asp-action="Edit" asp-route-id ="@product.Id"><i class="bi bi-pen"></i></a>

                    <a class="btn btn-outline-danger btn-sm" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure?')"><i class="bi bi-trash"></i></a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>